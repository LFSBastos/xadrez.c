#include <stdio.h>

int main() {
    // Movimento da Torre (5 casas para a direita) - usando FOR
    printf("Movimento da Torre (5 casas para a direita):\n");
    for (int i = 1; i <= 5; i++) {
        printf("Direita\n");  // Torre move em linha reta horizontal
    }

    // Movimento do Bispo (5 casas na diagonal superior direita) - usando WHILE
    printf("\nMovimento do Bispo (5 casas na diagonal superior direita):\n");
    int casa_bispo = 1;
    while (casa_bispo <= 5) {
        printf("Cima, Direita\n");  // Bispo move na diagonal
        casa_bispo++;
    }

    // Movimento da Rainha (8 casas para a esquerda) - usando DO-WHILE
    printf("\nMovimento da Rainha (8 casas para a esquerda):\n");
    int casa_rainha = 1;
    do {
        printf("Esquerda\n");  // Rainha pode mover em linha reta como a Torre
        casa_rainha++;
    } while (casa_rainha <= 8);

    // Movimento do Cavalo (2 casas para baixo e 1 para esquerda) - usando loops aninhados
    printf("\nMovimento do Cavalo (2 casas para baixo e 1 para esquerda):\n");
    
    // Primeira parte do L: 2 casas para baixo (usando FOR)
    for (int i = 1; i <= 2; i++) {
        printf("Baixo\n");
    }
    
    // Segunda parte do L: 1 casa para esquerda (usando WHILE)
    int movimento_lateral = 1;
    while (movimento_lateral <= 1) {
        printf("Esquerda\n");
        movimento_lateral++;
    }

    return 0;
}
